<%= form_with model:@document do |f| %>
  <div class='form-group'>
    <%= f.label :タイトル %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :内容 %>
    <%= f.text_area :explanation, rows: 5, class: 'form-control' %>
    <%= f.submit '登録', class: 'btn btn-success' %>
  </div>
<% end %>
